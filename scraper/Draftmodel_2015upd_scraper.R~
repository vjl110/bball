dx.dmp <- data.frame("Name"=NA, "Lg"="NCAA", "Tm"=NA, "Season"=NA, "Pos"=NA, "G"=NA, "MP"=NA, "MPG"=NA, "X2P"=NA, "X2PA"=NA, "X3P"=NA, "X3PA"=NA, "FT"=NA, "FTA"=NA, "ORB"=NA, "TRB"=NA, "AST"=NA, "TOV"=NA, "STL"=NA, "BLK"=NA, "PF"=NA, "PTS"=NA, "EXP"=NA)

kill <- 0
i <- 0
while(kill == 0){
	dxurl <- paste(c("http://www.draftexpress.com/stats.php?year=2015&league=NCAA&per=total&qual=prospects&sort2=DESC&pos=all&stage=all&min=All&conference=All&pageno=", 0 + i, "&sort=5"), collapse="")
	dx <- GET(dxurl)
		dx <- readHTMLTable(rawToChar(dx$content), stringsAsFactors = F)
			if(length(dx) == 5){
				kill <- 1
				i <- 0
			}else{
				dx <- as.data.frame(dx[[6]])				
				dx <- data.frame("Name"=dx[,2], "Lg"="NCAA", "Tm"=dx[,3], "Season"=2015,  "Pos"=NA, "G"=dx[,4], "MP"=NA, "MPG"=dx[,5], "X2P"=dx[,10], "X2PA"=dx[,11], "X3P"=dx[,13], "X3PA"=dx[,14], "FT"=dx[,16], "FTA"=dx[,17], "ORB"=dx[,19], "TRB"=dx[,21], "AST"=dx[,22], "TOV"=dx[,25], "STL"=dx[,23], "BLK"=dx[,24], "PF"=dx[,26], "PTS"=dx[,6], "EXP" = NA)		
				dx$MP <- as.numeric(as.character(dx$MPG))*as.numeric(as.character(dx$G))			
				dx.dmp <- rbind(dx.dmp, dx)
				i <- i + 1				
			}				
}

dx.dmp <- dx.dmp[-1,]
dx.dmp[dx.dmp == "&nbsp"] <- NA
	std <- read.csv("data/team_stds.csv")
	colnames(std)[3] <- "Tm" 
	dx.dmp <- merge(dx.dmp, std, by = "Tm")
ncaa.ind <- data.frame(dx.dmp[,2:3], "Tm"=dx.dmp$url, dx.dmp[,c(4,6:7,9:23)])

ncaa.ind <- subset(ncaa.ind, Name != "Andre Brown" & Name != "Earl Watson" & Name != "Chris Robinson" & Name != "John Edwards" & Name != "Wesley Johnson" & Name != "Joel James" & Name != "Devin Harris" & Name != "Marvin Williams" &Name != "Josh Smith" & Name != "Maceo Baston" & Name != "Lamond Murray" & Name != "Maurice Taylor" & Name != "Matt Howard" & Name != "James White" & Name != "Bobby Brown" & Name != "Juwan Howard" & Name != "Mo Williams" & Name != "Brandon Williams" &Name != "James Johnson" & Name != "Frank Williams" & Name != "Terrence Williams" & Name != "A.J. English" & Name != "Sam Jones" & Name != "John Johnson" & Name != "John Brown" & Name != "Larry Johnson" & Name != "Reggie Johnson" & Name != "Reggie Theus" & Name != "Michael Young" & Name != "Bernard Thompson" & Name != "Dwayne Polee" & Name != "Mike Brown" & Name != "Mike Williams" & Name != "Tim Kempton" & Name != "David Rivers" & Name != "Avery Johnson" & Name != "Chris Washburn" & Name != "Eric Johnson" & Name != "Kevin Johnson" & Name != "Thomas Hamilton" & Name != "Steve Smith" & Name != "Wesley Person" & Name != "Michael Bradley" & Name != "Rodney Williams" & Name != "JaJuan Johnson" &  Name != "James Robinson" & Name != "Eric Washington" & Name != "Marcus Thornton" & Name != "Mike Scott" & Name != "Reggie Smith" & Name != "Deonte Burton" & Name != "Joseph Young" & Name != "Tyler Stone" & Name != "Eric Anderson" & Name != "Aaron Williams" & Name != "Chris Smith" & Name != "Jordan Williams" & Name != "Anthony Johnson" & Name != "Chris Corchiani")

ncaa.ind$Name[ncaa.ind$Name == "Larry Nance"] <- "Larry Nance '15"
ncaa.ind$Name[ncaa.ind$Name == "Jakob Poltl"] <- "Jakob Poeltl"
ncaa.ind$Name[ncaa.ind$Name == "Gary Payton"] <- "Gary Payton II"
ncaa.ind$Name[ncaa.ind$Name == "Shawn Kemp"] <- "Shawn Kemp II"
